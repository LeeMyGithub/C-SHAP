<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="800">
    <Grid>
        <Grid Margin="0,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--时间显示-->
            <StackPanel Orientation='Vertical' Grid.Row="0" Height="58" Margin="0,20,0,0">
                <TextBlock x:Name="timeText" Margin="0,0,0,0" Text="00:00:00" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </StackPanel>

            <!--按钮-->
            <StackPanel Orientation='Horizontal' Grid.Row="1" HorizontalAlignment="Center" Height="58" Margin="0,20,0,0">
                <Button Margin="10,0,0,0" Width="200" Height="50" FontSize="35" Content="开始更新" Click="StartButtonClick"/>
                <Button Margin="10,0,0,0" Width="200" Height="50" FontSize="35" Content="停止更新" Click="StopButtonClick"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
